doctype html 

html(lang='en')
  head
    title= title
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='/stylesheets/style.css')

  body
    div(class="top-bar")
      h1(class="nav-title")=title
    div(class="content")
      ul(class="card-container")
        each item in items 
          div(class="card")
            a(href=item.url) #{item.name}
            img(src=item.picture class="card-img")
            h3=item.price_formatted
            h5=item.description

    div(class="btm-bar")
      a(href="/") Home