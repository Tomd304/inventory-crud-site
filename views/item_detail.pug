doctype html 

html(lang='en')
  head
    title= title
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='/stylesheets/style.css')

  body
    div(class="top-bar")
      h1(class="nav-title")=title
    div(class="content")
      div(class="card-container")
          img(src=item.picture class="detail-img")
          div
            h1=item.name
            h3=item.price_formatted
            h5=item.description
            h2 Quantity: #{item.quantity}
            h2 Category: #{item.category.name}
            a(href=item.url+"/update") Update
            a(href=item.url+"/delete" style="margin-left:10px") Delete
    div(class="btm-bar")
      a(href="/") Home